<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cloud.huel.spike.mapper.GoodsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cloud.huel.spike.domain.Goods">
        <id column="id" property="id" />
        <result column="goods_name" property="goodsName" />
        <result column="price" property="price" />
        <result column="stock" property="stock" />
        <result column="img_address" property="imgAddress" />
        <result column="title" property="title" />
        <result column="describe_info" property="describeInfo" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, goods_name, price, stock, img_address, title, describe_info
    </sql>


</mapper>
